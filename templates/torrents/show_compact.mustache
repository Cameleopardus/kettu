<li id="{{id}}" class="torrent {{statusWord}} {{mobileError}} compact" data-tracker="{{firstTracker}}">
  <div class="progressbar ui-progressbar ui-widget ui-widget-content ui-corner-all">
    {{{progressBar}}} 
  </div>
  <div class="name">
    {{name}}
    {{#showPriorityArrow}}
      <img src="css/images/priority_{{priorityArrow}}_small.png" class="priority compact" />
    {{/showPriorityArrow}}
  </div>
  
  {{^hasError}}
    <div class="statusString{{errorClass}}">{{statusString}}</div>
    <div class="buttons">
      <div class="pauseAndActivateButton">{{{pauseAndActivateButton}}}</div>
    </div>    
  {{/hasError}}
  
  {{#hasError}}
    <div class="buttons">
      <div class="pauseAndActivateButton">{{{pauseAndActivateButton}}}</div>
    </div>
    {{^isMobile}}
      <div class="statusString{{errorClass}}">{{statusString}}</div>
    {{/isMobile}}
  {{/hasError}}
</li>