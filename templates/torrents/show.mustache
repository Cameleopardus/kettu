<li id="{{id}}" class="torrent {{statusWord}}">
  <div class="name">{{name}}</div>
  <div class="progressDetails">{{progressDetails}}</div>
  
  <div class="progress">
    <div class="progressbar ui-progressbar ui-widget ui-widget-content ui-corner-all">
      {{{progressBar}}} 
    </div>
    <div class="pauseAndActivateButton">{{{pauseAndActivateButton}}}</div>
    <form method="DELETE" action="#/torrents/{{id}}" class="torrent_delete_form">
      <input type="submit" value="Delete" class="deleteButton" />
    </form>
  </div>
  
  <div class="statusString">{{statusString}}</div>
</li>